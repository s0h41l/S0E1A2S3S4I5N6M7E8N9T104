
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Dashboardlayout.cshtml";
}






<div class="container-fluid">
    <div class="card mt-4">
        <div class="card-body">
            <h2 class="display-4">Person Information</h2>
            @foreach (var i in ViewData["f"] as IList<Person>)
            {
                <div class="row my-4">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">

                        <p class="lead">Name : @i.FirstName @i.MiddleName @i.LastName</p>
                        <p class="lead">Email : @i.EmailId</p>
                        <p class="lead">Date of Birth : @i.DateOfBirth</p>
                        <p class="lead">Address : @i.HomeAddress</p>
                        <p class="lead">City : @i.HomeCity</p>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="text-center">
                            <img src="@i.ImagePath" class="img-fluid img-thumbnail" style="max-height:300px;"  alt="" />
                        </div>
                    </div>

                </div>

            }
        </div>
    </div>

</div>



